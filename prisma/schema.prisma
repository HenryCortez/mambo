generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String              @id @default(cuid())
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  email             String              @unique
  displayName       String?
  role              Role                @default(USER)
  isActive          Boolean             @default(true)
  pdfKeyEncrypted   String?
  lastLoginAt       DateTime?
  failedLoginCount  Int                 @default(0)
  accessToken       String?
  firstName         String?
  lastLogin         DateTime?
  lastName          String?
  microsoftId       String?             @unique
  refreshToken      String?
  tokenExpires      DateTime?
  auditLogs         AuditLog[]
  documentsCreated  Document[]          @relation("AuthorDocuments")
  receivedRelations DocumentRecipient[]
  signatures        SignatureLog[]
}

model Document {
  id                 String              @id @default(uuid())
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  title              String
  body               String?
  authorId           String
  type               DocumentType
  category           DocumentCategory
  status             DocumentStatus      @default(DRAFT)
  storage            StorageLocation     @default(SERVER)
  filePath           String?
  fileSize           Int?
  encryptionFrontAlg String?
  encryptionBackAlg  String?
  encryptionIv       String?
  encryptedFileKey   String?
  isSigned           Boolean             @default(false)
  signatureQR        String?
  signatureAt        DateTime?
  sendAttempts       Int                 @default(0)
  lastSendAttemptAt  DateTime?
  parentDocumentId   String?
  instance           String?
  deleted            Boolean             @default(false)
  attachments        Attachment[]
  auditLogs          AuditLog[]
  author             User                @relation("AuthorDocuments", fields: [authorId], references: [id])
  parentDocument     Document?           @relation("DocumentReplies", fields: [parentDocumentId], references: [id])
  replies            Document[]          @relation("DocumentReplies")
  recipients         DocumentRecipient[]
  signatureLogs      SignatureLog[]
  unsentQueue        UnsentQueue?
}

model DocumentRecipient {
  id          String          @id @default(uuid())
  createdAt   DateTime        @default(now())
  documentId  String
  recipientId String
  canRead     Boolean         @default(true)
  canWrite    Boolean         @default(false)
  status      DocumentStatus?
  receivedAt  DateTime?
  document    Document        @relation(fields: [documentId], references: [id])
  recipient   User            @relation(fields: [recipientId], references: [id])
}

model Attachment {
  id            String   @id @default(uuid())
  uploadedAt    DateTime @default(now())
  documentId    String
  filename      String
  filePath      String?
  fileSize      Int?
  encrypted     Boolean  @default(false)
  encryptionAlg String?
  encryptionIv  String?
  encryptedKey  String?
  document      Document @relation(fields: [documentId], references: [id])
}

model SignatureLog {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  documentId   String
  signerId     String
  qrContent    String?
  verifierInfo String?
  document     Document @relation(fields: [documentId], references: [id])
  signer       User     @relation(fields: [signerId], references: [id])
}

model UnsentQueue {
  id            String    @id @default(uuid())
  documentId    String    @unique
  reason        String?
  attempts      Int       @default(0)
  nextTryAt     DateTime?
  createdAt     DateTime  @default(now())
  lastUpdatedAt DateTime  @updatedAt
  document      Document  @relation(fields: [documentId], references: [id])
}

model AuditLog {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())
  actorId      String?
  action       String
  resourceId   String?
  resourceType String?
  details      String?
  ipAddress    String?
  actor        User?     @relation(fields: [actorId], references: [id])
  document     Document? @relation(fields: [resourceId], references: [id])
}

model AppSettings {
  id               Int      @id @default(1)
  allowedFrontAlgs String
  allowedBackAlgs  String
  defaultInstances String
  updatedAt        DateTime @updatedAt
}

enum DocumentType {
  OFICIO
  MEMORANDO
}

enum DocumentCategory {
  NORMAL
  CIFRADO
}

enum DocumentStatus {
  DRAFT
  SENT
  RECEIVED
  FAILED_TO_SEND
  NOT_SENT
}

enum StorageLocation {
  SERVER
  LOCAL
}

enum Role {
  ADMIN
  USER
}
